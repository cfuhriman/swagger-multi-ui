// tsconfig.json
{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "pretty": true,
        "sourceMap": true,
        "target": "es2017",
        "outDir": "./dist",
        "baseUrl": ".",
        "allowSyntheticDefaultImports": true,
        "lib": ["es2017", "dom"],
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        }        
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}